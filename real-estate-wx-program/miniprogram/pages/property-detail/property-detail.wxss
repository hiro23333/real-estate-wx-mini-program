/* pages/property-detail/property-detail.wxss */
page {
    background-color: #f7f7f7;
}

.container {
    padding-bottom: 120rpx; /* 留出底部操作栏的空间 */
}

/* 轮播图样式 */
.swiper-wrapper {
    width: 100%;
    height: 600rpx; /* 根据你的图片比例调整 */
}

.swiper-container, .swiper-item, .swiper-image {
    width: 100%;
    height: 100%;
}

/* 信息区域样式 */
.info-section, .tags-section, .basic-info-list, .description-section {
    background-color: #fff;
    padding: 30rpx;
    margin-top: 20rpx;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
    width: 100%;
}

.title-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.title {
    font-size: 40rpx;
    font-weight: bold;
    flex: 1;
}

.favorite-icon {
    color: #999;
}

.favorite-icon.favorited {
    color: #ff4500;
}

.address {
    font-size: 28rpx;
    color: #666;
    margin-top: 10rpx;
}

.price {
    font-size: 48rpx;
    color: #ff4500;
    font-weight: bold;
    margin-top: 20rpx;
}

/* 标签区域样式 */
.tags-section .tag-item {
    margin-right: 15rpx;
}

/* 基础信息列表样式 */
.basic-info-list {
    display: flex;
    justify-content: space-between;
    text-align: center;
}

.basic-info-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
}

.basic-info-item .label {
    font-size: 24rpx;
    color: #999;
}

.basic-info-item .value {
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 8rpx;
}

/* 描述区域样式 */
.section-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.description-content {
    font-size: 28rpx;
    color: #333;
    line-height: 1.6;
}

/* 底部操作栏 */
.bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: space-around;
    border-top: 1rpx solid #f2f2f2;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.share-button, .chat-button {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    border-radius: 40rpx;
}

.share-button {
    width: 200rpx;
    background-color: #f7f7f7;
    color: #333;
}

.chat-button {
    width: 400rpx;
    background-color: #007bff;
    color: #fff;
}

/* 模态框 */
.dialog-content {
    padding: 32rpx;
}
.dialog-content van-field {
    background-color: #f7f7f7;
    border-radius: 8rpx;
}