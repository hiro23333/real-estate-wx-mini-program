.my-container {
    background-color: #f7f7f7;
    min-height: 100vh;
    padding: 15rpx;
  }
  
  /* 用户信息卡片 */
  .user-card {
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    border-radius: 12rpx;
    padding: 20rpx 15rpx;
    margin-bottom: 15rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  
  .user-info {
    display: flex;
    align-items: center;
  }
  
  .avatar {
    width: 150rpx;
    height: 150rpx;
    margin: 0 40rpx;
    border-radius: 50%;
    margin-right: 12rpx;
  }
  
  .user-text {
    margin-left:30rpx ;
    display: flex;
    flex-direction: column;
  }
  
  .nickname {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 5rpx;
  }
  
  .user-id {
    font-size: 30rpx;
    color: #999;
  }
  
  .settings {
    display: flex;
    align-items: center;
    color: #666;
    font-size: 30rpx;
    margin-right: 20rpx;
  }
  
  
  /* 功能按钮区 */
  .function-buttons {
    width: 100%;
    display: flex;
    justify-content: space-around;
    background: #fff;
    border-radius: 12rpx;
    padding: 15rpx 0;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  
  .button-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 30rpx;
    color: #666;
  }
  
  .button-icon {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 5rpx;
  }