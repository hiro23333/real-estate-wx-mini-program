<view class="container">
  <!-- 用户信息卡片 -->
  <view class="user-card" bindtap="navigateToSettings">
    <view class="user-info">
      <image class="avatar" src="{{userInfo.avatarUrl || '/assets/default/default-avatar.png'}}" mode="aspectFill"></image>
      <view class="user-text">
        <text class="nickname">{{userInfo.nickname || '未登录'}}</text>
        <text class="user-id">UID:{{userInfo.user_id || '------'}}</text>
      </view>
    </view>
    <view class="settings" >
      <text>设置</text>
      <van-icon name="arrow" size="16px" />
    </view>
  </view>

  <!-- 功能按钮区 -->
  <view class="function-buttons">
    <view class="button-item" bindtap="navigateToFunction" data-type="myFavorite">
      <image src="/assets/icons/favorite.png" class="button-icon"></image>
      <text>我的收藏</text>
    </view>
    <view class="button-item" bindtap="navigateToFunction" data-type="history">
      <image src="/assets/icons/history.png" class="button-icon"></image>
      <text>历史浏览</text>
    </view>
    <view class="button-item" bindtap="onShowDialog" data-type="contact">
      <image src="/assets/icons/phone.png" class="button-icon"></image>
      <text>平台电话</text>
    </view>
  </view>
</view>

<van-dialog id="van-dialog" show="{{show}}" title="平台联系电话" message="欢迎致电：12341234123" />
